<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ft.server.dao.UserDAO">
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId">
        insert into users(username,password,email,user_sex,avatar,start_nation,
            start_city,dest_nation,dest_city,start_time,end_time,perf_vehicle,
            meg,user_regtime,user_modetime)
        values(#{username}, #{password}, #{email}, #{userSex}, #{avatar},
            #{startNation}, #{startCity}, #{destNation}, #{destCity}, #{startTime},
            #{endTime}, #{perfVehicle}, #{meg}, #{userRegTime}, #{userModeTime});
    </insert>

    <resultMap id="userMap" type="User">
        <id column="user_id" property="userId" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="email" property="email" />
        <result column="user_sex" property="userSex" />
        <result column="avatar" property="avatar" />
        <result column="start_nation" property="startNation" />
        <result column="start_city" property="startCity" />
        <result column="dest_nation" property="destNation" />
        <result column="dest_city" property="destCity" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="perf_vehicle" property="perfVehicle" />
        <result column="meg" property="meg" />
        <result column="user_regtime" property="userRegTime" />
        <result column="user_modetime" property="userModeTime" />
    </resultMap>

    <select id="queryUserByName" resultMap="userMap">
        SELECT
            user_id,
            username,
            password,
            email,
            user_sex,
            avatar,
            start_nation,
            start_city,
            dest_nation,
            dest_city,
            start_time,
            end_time,
            perf_vehicle,
            meg,
            user_regtime,
            user_modetime
        FROM users
        WHERE username=#{username};
    </select>

    <update id="updateUser">
        UPDATE users SET
            avatar=#{avatar},
            start_nation=#{startNation},
            start_city=#{startCity},
            dest_nation=#{destNation},
            dest_city=#{destCity},
            start_time=#{startTime},
            end_time=#{endTime},
            perf_vehicle=#{perfVehicle},
            meg=#{meg},
            user_modetime=#{userModeTime}
            WHERE username=#{username};
    </update>
</mapper>
